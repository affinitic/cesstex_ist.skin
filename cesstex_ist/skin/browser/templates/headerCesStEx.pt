<div id="header-cesstex"
     tal:define="view context/logoView">
  <table cellpadding="0"
         cellspacing="0">
    <tr>
      <td id="small-logo">
        <span tal:define="logo view/getLogo | nothing">
            <a href=""
               tal:attributes="href string: ${context/portal_url}">
                <img tal:condition="logo"
                     src=""
                     tal:replace="structure logo"/>

                <img tal:condition="not: logo"
                     src="petit_prince.jpg" />
            </a>
        </span>
      </td>
      <td>
        <table id="site-ces">
          <tr>
            <td>
              <div id="site">
                <a href=""
                   tal:attributes="href string: ${context/portal_url}/site-de-la-louviere">La Louvière</a>
                <!--<img src="puce_bleue.gif" class="puce-bleue" />-->
                <a href=""
                   tal:attributes="href string: ${context/portal_url}/site-de-manage">Manage</a>
              </div>
            </td>
            <td>
              <div id="ces">
                <a href=""
                   tal:attributes="href string: ${context/portal_url}/centre-scolaire-saint-exupery">
                <span class="centre">Centre scolaire</span>
                <span class="stex">Saint-Exupéry</span></a>
              </div>
            </td>
          </tr>
        </table>

        <table id="implentation"
               cellspacing="0"
               cellpadding="0">
          <tr>
            <td class="ecole">
                <a href=""
                   tal:attributes="href string: ${context/portal_url}/ecole-fondamentale-sainte-marie">Ecole
                   fondamentale<br />Sainte-Marie</a>
            </td>
            <td class="ecole">
                <a href=""
                   tal:attributes="href string:
                   ${context/portal_url}/ecole-fondamentale-saint-antoine">Ecole fondamentale<br />Saint-Antoine</a>
            </td>
            <td class="ecole">
                <a href="http://www.ismprimaire.be">Ecole
                   primaire<br />Sainte-Marie</a>
            </td>
            <td class="ecole">
                <a href=""
                   tal:attributes="href string: ${context/portal_url}/institut-sainte-marie">Institut<br />Sainte-Marie</a>
            </td>
            <td class="ecole">
                <a href=""
                   tal:attributes="href string: ${context/portal_url}/institut-sainte-therese">Institut<br
                   />Sainte-Thérèse</a>
            </td>
          </tr>
        </table>

        <table id="enseignement"
               cellpadding="0"
               cellspacing="0">
          <tr>
            <td>
              <div id="type-maternelle">
                <a href=""
                   tal:attributes="href string: ${context/portal_url}/maternelle">Maternelle</a>
              </div>
            </td>
            <td>
              <div id="type-primaire">
                <a href=""
                   tal:attributes="href string: ${context/portal_url}/primaire">Primaire</a>
              </div>
            </td>
            <td>
              <div id="type-secondaire">
                <a href=""
                   tal:attributes="href string: ${context/portal_url}/secondaire">Secondaire</a>
              </div>
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
</div>
